{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
